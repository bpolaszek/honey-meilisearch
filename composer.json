{
  "name": "honey/meilisearch-odm",
  "type": "library",
  "license": "MIT",
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "Honey\\ODM\\Meilisearch\\": "src/"
    },
    "files": [
      "src/functions.php"
    ]
  },
  "require": {
    "php": ">=8.4",
    "honey/odm-core": "dev-main",
    "bentools/meilisearch-filters": "^1.0",
    "meilisearch/meilisearch-php": "^1.16",
    "symfony/options-resolver": "^7.2"
  },
  "repositories": {
    "honey/odm-core": {
      "type": "path",
      "url": "../honey-odm"
    }
  },
  "require-dev": {
    "symfony/var-dumper": "^7.2",
    "symfony/http-client": "^7.2",
    "nyholm/psr7": "^1.8",
    "pestphp/pest": "^4.1",
    "phpstan/phpstan": "^2.1",
    "squizlabs/php_codesniffer": "^4.0",
    "friendsofphp/php-cs-fixer": "^3.88"
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true,
      "pestphp/pest-plugin": true
    }
  },
  "scripts": {
    "style:check": "vendor/bin/phpcs",
    "style:fix": "vendor/bin/php-cs-fixer fix src --allow-risky=yes; vendor/bin/phpcbf",
    "types:check": "vendor/bin/phpstan",
    "tests:run": "vendor/bin/pest --coverage --min=100",
    "ci:check": [
      "@style:check",
      "@types:check",
      "@tests:run"
    ]
  }
}
